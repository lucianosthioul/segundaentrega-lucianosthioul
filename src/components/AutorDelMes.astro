---
interface Props {
    nombre: string;
    imagen: string;
    cita: string;
    descripcion: string;
    clase?: string;
}

const { nombre, imagen, cita, descripcion, clase = '' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<section class={`section-padding bg-gray ${clase}`}>
    <div class="wrapper-contenido">
        <div class="stack-vertical md:flex-row items-center gap-12">
            <div class="md:w-1/3 wrapper-centrado">
                <img 
                    src={imagen} 
                    alt={nombre} 
                    class="w-48 h-48 md:w-64 md:h-64 rounded-full object-cover shadow-2xl ring-4 ring-white"
                >
            </div>
            
            <div class="md:w-2/3 text-center lg:text-left">
                <h4 class="kicker-text text-accent uppercase font-poppins">Autor del Mes</h4>
                <h2 class="titulo-destacado mb-4 text-text-primary font-poppins">{nombre}</h2>
                
                <blockquote class="blockquote font-poppins">
                    {cita}
                </blockquote>
                
                <p class="text-text-terciary mb-8 font-poppins">{descripcion}</p>
                
                <a href={`${base}catalogo?buscar=${encodeURIComponent(nombre)}`} class="btn-primary font-poppins">
                    Descubre sus obras
                </a>
            </div>
        </div>
    </div>
</section>