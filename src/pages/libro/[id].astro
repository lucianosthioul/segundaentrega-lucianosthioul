---
import Layout from '../../layouts/Layout.astro';
import { todosLosLibros } from '../../data/libros.ts';
import Libros from '../../components/Libros.astro';

// Esta función es requerida para rutas dinámicas en modo static
export function getStaticPaths() {
  return todosLosLibros.map((libro) => ({
    params: { id: libro.id.toString() },
  }));
}

const { id } = Astro.params;
const libroId = id ? parseInt(id, 10) : null;
const libro = todosLosLibros.find((l) => l.id === libroId);

// Filtra libros del mismo género para la sección "También te podría interesar"
const librosSugeridos = libro
  ? todosLosLibros.filter(l => l.genre === libro.genre && l.id !== libro.id).slice(0, 6)
  : [];
const idsSugeridos = librosSugeridos.map(l => l.id);

const precioFormateado = libro
  ? new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(parseFloat(libro.price))
  : '';

// Función para renderizar estrellas
const renderStars = (rating: number) => {
  let stars = [];
  for (let i = 1; i <= 5; i++) {
    if (i <= rating) {
      stars.push('<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>');
    } else {
      stars.push('<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-light" viewBox="0 0 20 20" fill="currentColor"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>');
    }
  }
  return stars.join('');
};
---

<Layout title={libro ? libro.title : 'Libro no encontrado'}>
  {libro ? (
    <>
      {/* --- SECCIÓN PRINCIPAL --- */}
      <section class="section-padding font-poppins bg-gray-50">
        <div class="wrapper-contenido max-w-6xl">
          <div class="contenido-apilado md:grid-cols-12 gap-12 lg:gap-16 items-start">
            {/* Columna de la portada */}
            <div class="md:col-span-4 lg:col-span-3 wrapper-centrado">
              <img src={libro.cover} alt={`Portada de ${libro.title}`} class="rounded-lg shadow-2xl w-full max-w-xs md:max-w-full"/>
            </div>
            {/* Columna de la información */}
            <div class="md:col-span-8 lg:col-span-9 text-center md:text-left">
              <h1 class="product-title">{libro.title}</h1>
              <p class="product-author">{libro.author}</p>
              <div class="wrapper-centrado md:justify-start items-center gap-2 mt-4">
                <div class="flex" set:html={renderStars(libro.rating)} />
                <span class="text-text-terciary text-sm">({libro.rating.toFixed(1)})</span>
              </div>
              <p class="product-price">{precioFormateado}</p>
              <div class="mt-8 pt-6 border-t border-gray-light space-y-4">
                
                <div class="flex items-center gap-3">
                  <span class="w-28 font-semibold text-text-secondary text-sm uppercase tracking-wider">Género</span>
                  <a href={`/catalogo?genero=${libro.genre}`} class="bg-gray-100 text-accent-hover font-medium px-3 py-1 rounded-full text-sm hover:bg-gray-200 transition-colors">
                    {libro.genre}
                  </a>
                </div>
                
                <div class="flex items-center gap-3">
                  <span class="w-28 font-semibold text-text-secondary text-sm uppercase tracking-wider">Páginas</span>
                  <span class="text-text-primary font-medium px-3">{libro.pages}</span>
                </div>

                <div class="flex items-center gap-3">
                  <span class="w-28 font-semibold text-text-secondary text-sm uppercase tracking-wider">Editorial</span>
                  <span class="text-text-primary font-medium px-3">{libro.publisher}</span>
                </div>

                <div class="flex items-center gap-3">
                  <span class="w-28 font-semibold text-text-secondary text-sm uppercase tracking-wider">Publicación</span>
                  <span class="text-text-primary font-medium px-3">{libro.publishDate}</span>
                </div>
                
                <div class="flex items-center gap-3">
                  <span class="w-28 font-semibold text-text-secondary text-sm uppercase tracking-wider">Idioma</span>
                  <span class="text-text-primary font-medium px-3">{libro.language}</span>
                </div>

              </div>
            </div>
          </div>
        </div>
      </section>

      {/* --- DESCRIPCIÓN --- */}
      <section class="section-padding font-poppins bg-white">
        <div class="wrapper-contenido max-w-6xl">
          <h2 class="section-title text-text-primary mb-6">Descripción</h2>
          <p class="page-subtitle product-description">{libro.description}</p>
        </div>
      </section>

      {/* --- TAMBIÉN TE PODRÍA INTERESAR --- */}
      {idsSugeridos.length > 0 && (
        <section class="section-padding font-poppins bg-gray-50">
          <div class="wrapper-contenido max-w-6xl">
            <h2 class="section-title text-text-primary mb-8">También te podría interesar</h2>
            <Libros filter={idsSugeridos} modo="grid" />
          </div>
        </section>
      )}
    </>
  ) : (
    <section class="section-padding font-poppins bg-gray-50">
      <div class="cta-banner-content">
        <h1 class="titulo-destacado text-text-primary">Libro no encontrado</h1>
        <p class="page-subtitle mt-4">No pudimos encontrar el libro que buscas (ID: {id}).</p>
        <a href="/catalogo" class="mt-8 inline-block btn-primary">Volver al Catálogo</a>
      </div>
    </section>
  )}
</Layout>