---
import Layout from '../layouts/Layout.astro';
import Libros from '../components/Libros.astro';
---

<Layout>
	<!-- CONTENIDO PRINCIPAL -->
    <main>
        <section class="wrapper-contenido section-padding">
            <h1 class="page-title text-text-primary text-center mb-12 md:text-5xl">
                Explora Nuestro Catálogo Completo
            </h1>

            <!-- Barra de búsqueda y filtros -->
            <div class="stack-vertical md:flex-row justify-between items-center mb-12 space-y-4 md:space-y-0 md:space-x-4">
                <!-- Input de búsqueda -->
                <input type="text" id="searchInput" placeholder="Buscar libros, autores..." class="w-full md:w-1/3 p-3 border border-gray-light rounded-lg focus:ring-accent focus:border-accent transition-all">
                
                <!-- Filtros de género y orden -->
                <div class="flex space-x-4 w-full md:w-2/3 justify-end">
                    <select id="genreFilter" class="p-3 border border-gray-light rounded-lg focus:ring-accent focus:border-accent transition-all">
                        <option value="" disabled selected hidden>Género</option>
                        <option value="">Todos los géneros</option>
                        <option value="Drama">Drama</option>
                        <option value="Surrealismo">Surrealismo</option>
                        <option value="Fantasía">Fantasía</option>
                        <option value="Misterio">Misterio</option>
                        <option value="Terror">Terror</option>
                        <option value="Ciencia Ficcion">Ciencia Ficción</option>
                        <option value="Filosofia">Filosofía</option>
                        <option value="Ensayo">Ensayo</option>
                        <option value="Relatos cortos">Relatos cortos</option>
                        <option value="Aventura">Aventura</option>
                    </select>

                    <select id="sortSelect" class="p-3 border border-gray-light rounded-lg focus:ring-accent focus:border-accent transition-all">
                        <option value="" disabled selected hidden>Ordenar por</option>
                        <option value="">Sin ordenar</option>
                        <option value="titulo">Título (A-Z)</option>
                        <option value="autor">Autor (A-Z)</option>
                        <option value="precio">Precio (Menor a Mayor)</option>
                    </select>
                </div>
            </div>

            <!-- GRID DE LIBROS -->
            <Libros />

            <!-- Mensaje cuando no hay resultados -->
            <div id="noResults" class="text-center py-16 hidden">
                <p class="product-author">No se encontraron libros que coincidan con tu búsqueda.</p>
            </div>
        </section>
    </main>

</Layout>

    <!-- Scripts de filtros y modal -->
    <script src="../assets/js/categorias.js"></script>
