---
import atmosferaciencia from '../assets/images/cienciaficcion.png';
import Layout from '../layouts/Layout.astro';
import Libros from '../components/Libros.astro';
import HeroBanner from '../components/HeroBanner.astro';
const librosDestacados = [12, 13, 14, 1, 15, 16];
---
<Layout>
<!-- Contenido principal de la página -->
    <main>
        <HeroBanner 
            imageSrc={atmosferaciencia}
            title="Futuros Distópicos"
            description="Una selección de historias de ciencia ficción que exploran futuros distópicos tan inquietantes como irresistibles."
        />

        <!-- Sección de la colección de libros de misterio -->
        <section class="wrapper-contenido section-padding">
            <h2 class="section-title text-text-primary mb-8">Explora la Colección de Ciencia Ficción</h2>
            <Libros filter={librosDestacados} modo="grid" />
        </section>
    </main>
</Layout>